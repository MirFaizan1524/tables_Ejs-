</head>
<body>
    <%- include("./layouts/header.ejs") %>  
    
    <table id="quotesTable" class="table table-bordered" >
        <thead>
            <tr>
                <th>ID</th>
                <th>Quote</th>
                <th>Author</th>
                 
            </tr>
        </thead>
        <tbody>
            <% data.map((values)=>{ %>

                                 
                <tr>
                    <td><%= values._id %></td>
                    <td><%= values.qoute %></td>
                    <td><%= values.name %></td>
                     
                </tr>
           <% }) %>
        </tbody>
    </table>

    
</body>
</html>

<script>

$(document).ready(function(){
   $('#quotesTable').DataTable({
     
     "order":[[1,'asc']],   // order the specific column either asc or desc
     "ordering":true,    // enabling/disabling order 
     "columnDefs":[{   
        "targets":[0,1],  // selecting columns inorder to sort or un sort
        "orderable":true,
                 
     },
    {
      "targets":[2],  // targets particular column
      "visible":true,  // sets specific col visible/invisible
      "searchable":true, // makes search possible/impossible for a specific column

    }],
     "searching":true, // enables/disables whole searching    
     "paging":true,    // enables pagination
     "pageLength":3 ,   // enables to render no of column entries per view
     
     layout: {        // enables to export table data to multiple formats
        topStart: {
            buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
        }
    }

   });

 

})







</script>